<%-include('partials/header.ejs') %>
<body>
    <%-include('partials/navbar.ejs') %>
    
    <div class="container">

        
        <h1>Nova Pergunta</h1>
        <hr>
        <a href="/perguntar"class="btn btn-success">Perguntar</a>
        <hr>

        <% perguntas.forEach(pergunta => { %>

        <div class="card">
            
            <div class="card-body">
                <h2><%= pergunta.titulo %></h2>
                <hr>
                <h5><%= pergunta.descricao %></h5>
                <hr>
                <a href="pergunta/<%= pergunta.id %>"><button class="btn btn-success"> Responder</button></a>
            </div>
            
        </div>       
            
            
    
        <% }) %>
    </div>
    
</body>
<%-include('partials/footer.ejs') %>
