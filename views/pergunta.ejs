<%-include('partials/header.ejs') %>
<body>
    <%-include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %></h1>
        <h4> <%= pergunta.descricao %></h4>
        <hr>
        
        <form method="POST" action="/responderpergunta">
            <textarea placeholder="Escreva sua resposta" class="form-control" name="resposta"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button  href="#" class="btn btn-success">Responder</button>
        </form>

        <div class="card">
            <h3>Respostas</h3>
            <div class="card-body">
                <hr>
                <% respostas.forEach(resposta => {%>
                    <%= resposta.corpo %><br><hr>
                <% }) %>
            </div>
            
        </div>
        
    </div>
</body>
<%-include('partials/footer.ejs') %>